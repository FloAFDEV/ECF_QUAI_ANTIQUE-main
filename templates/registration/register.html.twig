{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<section style="background: #232526">
		<div class="container py-5 mt-3">
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-5 text-center">
					<h1 class="text-white mb-5">
						<span class="text-warning">Devenir</span>
						membre du
						<span class="text-warning">Quai Antique</span>
					</h1>
					<form method="post" class="mt-5">
						{% for flash_error in app.flashes('verify_email_error') %}
							<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
						{% endfor %}
						<div class="form-group mb-5">
							<label for="{{ registrationForm.email.vars.id }}" class="text-warning">Email</label>
							{{ form_widget(registrationForm.email, {attr: {class: 'form-control', placeholder: 'Entrez votre e-mail'}}) }}
						</div>
						<div class="form-group mb-5">
							<label for="{{ registrationForm.userName.vars.id }}" class="text-warning">Nom</label>
							{{ form_widget(registrationForm.userName, {attr: {class: 'form-control', placeholder: 'Entrez votre nom'}}) }}
						</div>
						<div class="form-group mb-3">
							<label for="{{ registrationForm.plainPassword.vars.id }}" class="text-warning">Mot de passe</label>
							{{ form_widget(registrationForm.plainPassword, {attr: {class: 'form-control', placeholder: 'Entrez votre mot de passe'}}) }}
						</div>
						<div class="form-group form-check">
							{{ form_widget(registrationForm.RGPDConsent, {attr: {class: 'form-check-input', id: registrationForm.RGPDConsent.vars.id}}) }}
							<label class="form-check-label text-white" for="{{ registrationForm.RGPDConsent.vars.id }}">J'ai lu et j'accepte les conditions générales d'utilisation</label>
						</div>
						<button class="btn btn-lg btn-info mt-3" type="submit">M'inscrire</button>
						{{ form_end(registrationForm) }}
					</form>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
